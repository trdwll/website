{% extends '_base.html' %}

{% block title %}Admin{% endblock %}

{% block content %}

{% if form.non_field_errors %}
<div class="bg-red-100 border-t border-b border-red-500 text-red-700 px-4 py-3" role="alert">
    <p class="font-bold">Yikes</p>
{% for error in form.non_field_errors %}
    <p class="text-sm">{{ error }}</p>
{% endfor %}
</div>
{% endif %}
<div class="flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 dark:bg-gray-900 dark:text-white">
    <div class="max-w-md w-full flex flex-col w-full max-w-sm mx-auto p-4 border border-gray-200 bg-white shadow dark:bg-black dark:border-gray-700">

      <form action="{{ app_path }}" method="post" id="login-form">{% csrf_token %}
            
            <!-- Username -->
            <div class="flex flex-col mb-4">
                <label for="username" class="required" class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600">
                    Username
                </label>
        
                <div class="relative">
                    <div class="absolute flex border border-transparent left-0 top-0 h-full w-10">
                        <div class="flex items-center justify-center rounded-tl rounded-bl z-10 bg-gray-100 text-gray-600 text-lg h-full w-full dark:bg-gray-700">
                            <i class="dark:text-white fas fa-user-astronaut"></i>
                        </div>
                    </div>
                    <input autocomplete="off" id="username" name="username" type="text" placeholder="Username" class="dark:border-gray-700 dark:bg-gray-800 text-sm sm:text-base relative w-full border rounded placeholder-gray-400 focus:border-indigo-400 focus:outline-none py-2 pr-2 pl-12" />
                </div>
    
                <span class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">
                    {{ form.username.errors }}
                </span>
            </div>
    
            <!-- Password -->
            <div class="flex flex-col mb-4">
                <label for="password" class="required" class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600">
                    Password
                </label>
        
                <div class="relative">
                    <div class="absolute flex border border-transparent left-0 top-0 h-full w-10">
                        <div class="flex items-center justify-center rounded-tl rounded-bl z-10 bg-gray-100 text-gray-600 text-lg h-full w-full dark:bg-gray-700">
                            <i class="dark:text-white fas fa-lock"></i>
                        </div>
                    </div>
                    <input autocomplete="off" id="password" name="password" type="password" placeholder="Password" class="dark:border-gray-700 dark:bg-gray-800 text-sm sm:text-base relative w-full border rounded placeholder-gray-400 focus:border-indigo-400 focus:outline-none py-2 pr-2 pl-12" />
                </div>
        
                <span class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">
                    {{ form.password.errors }}
                </span>
            </div>
    
            <!-- OTP token -->
            <div class="flex flex-col mb-4">
                <label for="id_otp_token" class="required" class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600">
                    OTP
                </label>
        
                <div class="relative">
                    <div class="absolute flex border border-transparent left-0 top-0 h-full w-10">
                        <div class="flex items-center justify-center rounded-tl rounded-bl z-10 bg-gray-100 text-gray-600 text-lg h-full w-full dark:bg-gray-700">
                            <i class="dark:text-white fas fa-key-skeleton"></i>
                        </div>
                    </div>
                    <input autocomplete="off" name="otp_token" id="id_otp_token" type="text" placeholder="OTP Token" class="dark:border-gray-700 dark:bg-gray-800 text-sm sm:text-base relative w-full border rounded placeholder-gray-400 focus:border-indigo-400 focus:outline-none py-2 pr-2 pl-12" />
                </div>
        
                <span class="flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1">
                    {{ form.otp_token.errors }}
                </span>
            </div>
            
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Login</button>
        </form>
    </div>
</div>
{% endblock %}
